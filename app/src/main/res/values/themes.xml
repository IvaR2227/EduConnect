<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EduConnect" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_blue_dark</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        
        <item name="colorSecondary">@color/secondary_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/secondary_green_dark</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/input_background_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.EduConnect" parent="Base.Theme.EduConnect" />
    
    <!-- Custom Button Style -->
    <style name="LoginButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:textColor">@color/button_text_white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
        <item name="android:layout_height">@dimen/button_min_height</item>
        <item name="android:elevation">@dimen/elevation_small</item>
    </style>
    
    <!-- Custom Input Field Style -->
    <style name="InputField" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/input_background_light</item>
        <item name="boxStrokeColor">@color/input_border_light</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_medium</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_medium</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_medium</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_medium</item>
    </style>
    
    <!-- Dropdown Input Field Style -->
    <style name="InputField.Dropdown" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/input_background_light</item>
        <item name="boxStrokeColor">@color/input_border_light</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_medium</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_medium</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_medium</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_medium</item>
    </style>
    
    <!-- Card Style -->
    <style name="LoginCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/radius_xlarge</item>
        <item name="cardElevation">@dimen/elevation_large</item>
        <item name="cardBackgroundColor">@color/surface_light</item>
        <item name="android:layout_margin">@dimen/margin_large</item>
    </style>
</resources> 